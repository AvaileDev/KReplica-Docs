@param activeFile: String
@param tourSteps: List<io.availe.kreplicadocs.FeatureTourStep>
@param oob: Boolean = false

<div id="feature-tour-description"
     hx-swap-oob="@if(oob)outerHTML@endif">
    @for (step in tourSteps)
        @if (step.file.value == activeFile)
            <p>${step.description}</p>
        @endif
    @endfor
</div>