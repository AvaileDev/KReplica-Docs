@param link: io.availe.kreplicadocs.model.NavLink
@param currentPage: String
@param isMobile: Boolean

<li>
    <a href="${link.href}"
       class="${if (link.pageId == currentPage) "active" else ""}"
       hx-get="${link.href}"
       hx-target=".main-content"
       hx-push-url="true"
       hx-indicator=".page-progress"
       @click="${if (isMobile) "isOpen = false" else ""}"
       preload="${if (link.pageId == "playground") "mouseover" else ""}">
        ${link.label}
    </a>
</li>